<Window x:Class="Test2.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="250" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <TextBlock Text="Login" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12,58,0,0" />
        <TextBox x:Name="UserTextBox" VerticalAlignment="Top" Margin="10,79,50,0" Height="18"/>

        <TextBlock Text="Password" Margin="10,97,-10,114" />
        <PasswordBox x:Name="PasswordBox" Margin="12,113,48,0" VerticalAlignment="Top"  Width="240"/>

        <Button Content="Войти" Click="LoginButton_Click" VerticalAlignment="Top" Height="22" Margin="187,176,50,0"/>

    </Grid>
</Window>
